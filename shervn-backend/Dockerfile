FROM python:3.7

ARG POSTGRES_USER
ARG POSTGRES_PASSWORD
ARG POSTGRES_DB

ENV POSTGRES_USER=$POSTGRES_USER
ENV POSTGRES_PASSWORD=$POSTGRES_PASSWORD
ENV POSTGRES_DB=$POSTGRES_DB
ENV DJANGO_ENV=prod

WORKDIR /backend
COPY requirements.txt .
COPY certs/* certs/
RUN pip install -r requirements.txt

COPY . .
